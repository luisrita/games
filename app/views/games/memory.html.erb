<div class="container">
  <h1 class="title">Numbers Memory Game</h1>
  <div class="game-wrapper">
    <a href="#" class="js-start btn">Start Game</a>
    <div class="numbers-container">
      <div class="numbers-container__number">
        <p class="js-randNumber"></p>
        <div class="progress-bar"><span></span></div>
      </div>
      <div class="numbers-container__input">
        <input id="player-input" type="text" name="player-number" class="input input--number" autofocus>
        <a href="#" class="js-submit-number btn">Submeter</a>
      </div>
    </div>
  </div>

  <div class="game-divider">
    <p>Resultado: <span class="js-result"></span></p>

    <div id="game-win" class="game-divider__actions">
      <a href="#" class="js-next-level btn">Próximo Nível</a>
      <%= link_to 'Voltar', memory_path, :class => 'btn' %>
    </div>

    <div id="game-lose" class="game-divider__actions">
      <a href="#" class="js-repeat-level btn">Repetir</a>
      <%= link_to 'Voltar', memory_path, :class => 'btn' %>
    </div>
  </div>

  <div id="feedback-modal" class="feedback-modal">
    <p class="js-feedback"></p>
  </div>
</div>